<section v-if="f1data.driverStandings.length > 0" class="standings-table">
  <header>
    <h2>Driver's Championship</h2>
  </header>

  <div class="chart-wrap">
    <table class="chart show-all">
      <thead>
        <tr>
          <th>Pos</th>
          <th>Driver</th>
          <th>Constructor</th>
          <th>Points</th>
          <th>Wins</th>
        </tr>
      </thead>
      <tbody>
    {% for i in pitwall.drivers[year] %}
    <tr>
      <td>{{ i.positionText }}</td>
      <td>
      <a href="{{ i.Driver.url }}" target="_blank">{{ i.Driver.givenName }} {{ i.Driver.familyName }}</a>
      <img src="/images/nation-flags/{{ i.Driver.nationality }}.svg" alt="{{ i.Driver.nationality }}" class="nation-flag">
      </td>
      <td></td>
      <td>{{ i.points }}</td>
      <td>{{ i.wins }}</td>
    </tr>
    {% endfor %}
      </tbody>
    </table>
  </div>
</section>