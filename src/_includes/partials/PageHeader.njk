<header class="site-header">
	<div class="header-contents">
		<img srcset="/images/pitwall-horizontal.svg" class="site-title" width="400" height="41">
	</div>

	<nav class="season-select-widget">
		<label for="season-select">Select a Season</label>
		<div class="season-select-wrapper">
			<select id="season-select" v-model="selectSeason" class="season-select">
				{% for yearValue in pitwall.years %}
				<option value="{{ yearValue }}" {% if year == yearValue %}selected{% endif %}>
					{{ yearValue }}
				</option>
				{% endfor %}
			</select>
		</div>
	</nav>
</header>