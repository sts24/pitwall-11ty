<section class="standings-table">
    <header>
      <h2>Constructor's Championship</h2>
    </header>

    <div class="chart-wrap">
      <table class="chart show-all">
        <thead>
          <tr>
            <th>Pos</th>
            <th>Constructor</th>
            <th>Points</th>
            <th>Wins</th>
          </tr>
        </thead>
        <tbody>
        {% for i in item.standings %}
          <tr>
            <td>{{ i.positionText }}</td>
            <td>
              <a href="{{ i.Constructor.url }}" target="_blank">{{ i.Constructor.name }}</a>
            </td>
            <td>{{ i.points }}</td>
            <td>{{ i.wins }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </section>